@model IEnumerable<PizzeriaWebSite.Models.Ingredient>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.IngredientDesc)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IsActive)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IngredientDesc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.IngredientID }) |
                @Html.ActionLink("Details", "Details", new { id = item.IngredientID }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.IngredientID }) |
                @Html.ActionLink("Category", "Category", new { id = item.IngredientID })
            </td>
        </tr>
    }

</table>
