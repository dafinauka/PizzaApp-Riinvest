@model PizzeriaWebSite.ViewModels.ContactUsViewModel


<style>
    .contact-us-form .forma {
        display: block;
        width: 100% !important;
        height: 50px;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 21px;
        color: #555;
        border: 1px solid #aeaeae;
        border-radius: 3px;
        margin-bottom: 15px;
        opacity: .8;
        outline: 0px !important;
        transition: all 1s;
        -moz-transition: all 1s;
        -o-transition: all 1s;
        -webkit-transition: all 1s;
    }

    .txtarea {
        height: 117px;
        resize: none;
        width: 100% !important;
        display: block;
        padding: 6px 12px;
        font-size: 14px;
        line-height: 21px;
        color: #555;
        border: 1px solid #aeaeae;
        border-radius: 3px;
        margin-bottom: 15px;
        opacity: .8;
        outline: 0px !important;
        transition: all 1s;
        -moz-transition: all 1s;
        -o-transition: all 1s;
        -webkit-transition: all 1s;
    }

    .submit-btn,
    .submit-btn:active,
    .submit-btn:focus,
    .submit-btn:visited {
        background-color: transparent;
        border: 1px solid #511C39;
        border-radius: 4px;
        width: 100%;
        height: 50px;
        text-transform: uppercase;
        font-size: 18px;
        color: #511C39;
        outline: 0px !important;
        transition: all 1s;
        -moz-transition: all 1s;
        -o-transition: all 1s;
        -webkit-transition: all 1s;
    }

        .submit-btn:hover {
            background: #511C39;
            color: #fff;
            border-color: #511C39;
        }

    hr.style-two {
        border: 0;
        height: 2px;
        background-image: linear-gradient(to right, rgba(0, 0, 0, 0), rgba(0, 0, 0, 0.75), rgba(0, 0, 0, 0));
    }

    #img {
        width: 45px;
        margin-top:3px;
        margin-right: 25px;
    }

        #img:hover {
            background-color: white;
            transition: all 1s;
            border-color:white;
            border-radius:6px;
        } 
</style>


<div id="bg">
    <div class="contact-us-form">

        <div class="container">

            @using (Html.BeginForm("ContactUs", "Home", FormMethod.Post))
            {
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2 class="section-heading">Contact Us</h2>
                        <hr class="style-two" />
                    </div>
                </div>
                <div class="row">

                    <div class="col-md-4">

                        @Html.TextBoxFor(c => c.Name, new { @class = "forma", placeholder = "Name" })
                        @Html.ValidationMessageFor(c => c.Name, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(c => c.Email, new { @class = "forma", placeholder = "Email" })
                        @Html.ValidationMessageFor(c => c.Email, "", new { @class = "text-danger" })
                        @Html.TextBoxFor(c => c.Subject, new { @class = "forma", placeholder = "Subject" })
                        @Html.ValidationMessageFor(c => c.Subject, "", new { @class = "text-danger" })

                    </div>

                    <div class="col-md-8">

                        @Html.TextAreaFor(c => c.Message, 25, 140, new { @class = "txtarea", placeholder = "Message Text...." })
